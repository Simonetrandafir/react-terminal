{
  "name": "@nd-fir/react-terminal",
  "version": "1.0.0",
  "private": false,
  "description": "Terminale React in stile Unix controllabile via event bus, con input multiline auto-size e supporto async.",
  "author": {
    "name": "Simone Trandafir",
    "email": "trandafirweb@gmail.it",
    "url": "https://www.trandafirweb.it"
  },
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --sourcemap --minify",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "prepublishOnly": "npm run build",
    "postbuild": "node -e \"require('fs').copyFileSync('src/styles.css','dist/styles.css')\""
  },
  "peerDependencies": {
    "react": "^18 || ^19"
  },
  "devDependencies": {
    "typescript": "^5",
    "tsup": "^8",
    "@types/react": "^18"
  },
  "engines": {
    "node": ">=18.18"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Simonetrandafir/react-terminal.git"
  },
  "bugs": {
    "url": "https://github.com/Simonetrandafir/react-terminal/issues"
  },
  "homepage": "https://github.com/Simonetrandafir/react-terminal#readme",
  "keywords": [
    "react",
    "terminal",
    "cli",
    "event-bus",
    "textarea",
    "async",
    "spinner"
  ]
}
